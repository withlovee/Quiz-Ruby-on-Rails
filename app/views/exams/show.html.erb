
<h1><%= @exam.name %></h1>
<h3><%= @exam.category.name %></h3>
<h3>เวลา: <%= @exam.time %> นาที
</h3>
<%= raw @exam.description %>

<% if user_signed_in? %>
  <%= form_tag(exam_path(@exam), method: 'post') do %>
  <p class="text-center">
    <input type="submit" class="btn btn-large btn-primary" value="เริ่มทำข้อสอบ">
  </p>
  <% end %>
<% else %>
  <%= form_tag(new_user_session_path, method: 'get') do %>
  <p class="text-center">
    <input type="submit" class="btn btn-large btn-primary" value="ล็อกอินเพื่อทำข้อสอบ">
  </p>
  <% end %>
<% end %>
