<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @exam.name %>
</p>

<p>
  <b>Slug:</b>
  <%= @exam.slug %>
</p>

<p>
  <b>Order:</b>
  <%= @exam.order %>
</p>

<p>
  <b>Description:</b>
  <%= @exam.description %>
</p>

<p>
  <b>Time:</b>
  <%= @exam.time %>
</p>

<p>
  <b>Finish text:</b>
  <%= @exam.finish_text %>
</p>
<% if user_signed_in? %>
  <%= form_tag(exam_path(@exam), method: 'post') do %>
    <input type="submit" value="เริ่มทำข้อสอบ">
  <% end %>
<% else %>
  <%= form_tag(new_user_session_path, method: 'get') do %>
    <input type="submit" value="ล็อกอินเพื่อทำข้อสอบ">
  <% end %>
<% end %>
<%= link_to 'Edit', edit_exam_path(@exam) %> |
<%= link_to 'Back', exams_path %>
