<h1>เลือกข้อสอบที่ต้องการทำ</h1>

<table>
  <tr>
    <th>Category</th>
    <th>Name</th>
    <th>Slug</th>
    <th>Order</th>
    <th>Description</th>
    <th>Time</th>
  </tr>

<% @exams.each do |exam| %>
  <tr>
    <td><%= exam.name %></td>
    <td><%= exam.slug %></td>
    <td><%= exam.order %></td>
    <td><%= exam.description %></td>
    <td><%= exam.time %></td>
    <td><%= exam.finish_text %></td>
    <td><%= link_to 'Show', exam %></td>
    <td><%= link_to 'Edit', edit_exam_path(exam) %></td>
    <td><%= link_to 'Destroy', exam, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

