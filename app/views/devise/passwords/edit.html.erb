<h2>เปลี่ยนรหัสผ่าน</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="control-group">
    <%= f.label(:password, "ใส่รหัสผ่านใหม่", class: 'control-label') %>
    <div class="controls"><%= f.password_field :password, :autocomplete => "off", :autofocus => true %></div>
  </div>
  <div class="control-group">
    <%= f.label(:password_confirmation, "ใส่รหัสผ่านใหม่อีกครั้ง", class: 'control-label') %>
    <div class="controls"><%= f.password_field :password_confirmation %></div>
  </div>

  <div><%= f.submit "เปลี่ยนรหัสผ่าน", class: 'btn btn-primary' %></div>
<% end %>

<%= render "devise/shared/links" %>
