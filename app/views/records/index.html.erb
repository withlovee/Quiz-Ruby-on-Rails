<h1>Listing records</h1>

<table>
  <tr>
    <th>User</th>
    <th>Exam</th>
    <th>Answers</th>
    <th>Time</th>
    <th>Points</th>
    <th>Date taken</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @records.each do |record| %>
  <tr>
    <td><%= record.user.email %></td>
    <td><%= record.exam.name %></td>
    <td><%= record.answers %></td>
    <td><%= record.time %></td>
    <td><%= record.points %></td>
    <td><%= record.date_taken %></td>
    <td><%= link_to 'Show', record %></td>
    <td><%= link_to 'Edit', edit_record_path(record) %></td>
    <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

